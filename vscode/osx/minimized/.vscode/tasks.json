{
  "tasks": [
    {
      "type": "shell",
      "label": "g++: 编译单文件",
      "command": "/opt/homebrew/bin/aarch64-apple-darwin22-g++-12",
      "args": [
        "${file}",
        "-g",
        "-o",
        "${workspaceFolder}/build/executable",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
  ],
  "version": "2.0.0"
}
