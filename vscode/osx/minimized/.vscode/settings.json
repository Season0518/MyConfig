{
    //为了使用从clangd作为LSP，所以禁用intellisense
    "C_Cpp.intelliSenseEngine": "disabled",
    //clangd的部分启动参数
    "clangd.arguments": [
        "--query-driver=/opt/homebrew/bin/aarch64-apple-darwin22-g++-12",
        "--compile-commands-dir=${workspaceFolder}",
        "--enable-config",
        "-j=8",
        "--background-index",
        "--completion-parse=auto",
        "--function-arg-placeholders=false",
        "--header-insertion=never",
        "--pch-storage=memory",
        "--ranking-model=decision_forest",
        "--pretty"
    ],
    //自动配置cmake项目，以便实时更新项目的compile_commands.json
    "cmake.configureOnOpen": true,
    //隐藏CMake的部分按钮和提示功能，节省Status Bar空间
    "cmake.statusbar.advanced": {
        "build": {
            "visibility": "hidden"
        },
        "debug": {
            "visibility": "hidden"
        },
        "launch": {
            "visibility": "hidden"
        },
        "status": {
            "visibility": "hidden"
        }
    },
    "code-runner.clearPreviousOutput": true,
    //如果是在目录内，则将文件生成到/build目录下
    "code-runner.executorMap": {
        "c": "gcc $fileName -o $workspaceRoot/build/exec && $workspaceRoot/build/exec",
        "cpp": "/opt/homebrew/bin/aarch64-apple-darwin22-g++-12 $fileName -O2 -W -DLOCAL -DDBG_MACRO_NO_WARNING -I$workspaceRoot/dependency/include -o $workspaceRoot/build/exec && $workspaceRoot/build/exec",
        "python": "conda activate vscode && python $fileName"
    },
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.ignoreSelection": true,
    "code-runner.preserveFocus": false,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.temporaryFileName": "",
    "cph.general.defaultLanguage": "cpp",
    "cph.general.menuChoices": "cpp python java",
    //如果不希望保存bin文件到代码目录下，在这里添加缓存的绝对路径
    "cph.general.saveLocation": "",
    "cph.language.cpp.Args": "-O2 -W",
    "cph.language.cpp.Command": "/opt/homebrew/bin/aarch64-apple-darwin22-g++-12",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.guides.indentation": false,
    "editor.suggestSelection": "first",
    "extensions.experimental.affinity": {
        "llvm-vs-code-extensions.vscode-clangd": 1
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.cache": true,
        "**/.git": true,
        "**/Thumbs.db": true,
        "**/build": true
    },
    "json.schemaDownload.enable": false,
    "terminal.explorerKind": "external",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.gpuAcceleration": "off",
    "workbench.editor.enablePreview": true
}